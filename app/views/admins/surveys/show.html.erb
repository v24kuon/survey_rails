<h1><%= @survey.title %></h1>

<p><strong>概要:</strong> <%= @survey.summary %></p>
<p><strong>説明:</strong> <%= @survey.description %></p>

<h2>質問一覧</h2>

<% @survey.questions.order(:position).each do |question| %>
  <div class="question">
    <h3><%= question.question_title %></h3>
    <p>タイプ: <%= question.question_type %></p>
    <p>必須: <%= question.is_required ? 'はい' : 'いいえ' %></p>

    <% if question.choices.any? %>
      <h4>選択肢:</h4>
      <ul>
        <% question.choices.order(:order_number).each do |choice| %>
          <li><%= choice.choice_text %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
<% end %>

<%= link_to '回答一覧', admins_survey_responses_path(@survey) %>
<%= link_to '編集', edit_admins_survey_path(@survey) %> |
<%= link_to '戻る', admins_surveys_path %>
