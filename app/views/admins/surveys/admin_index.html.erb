<div class="2xl:container 2xl:mx-auto 2xl:px-4">
  <div class="flex flex-col h-screen">
    <div class="flex-1 flex flex-wrap">
      <div class="p-2 bg-white w-full md:w-52 lg:w-60 flex flex-col md:flex hidden" id="sideNav">
        <nav>
          <a class="block text-gray-500 py-2.5 px-4 my-4 rounded transition duration-200 hover:bg-gradient-to-r hover:from-cyan-500 hover:to-cyan-500 hover:text-white" href="#">
            仮リンク
          </a>
          <a class="block text-gray-500 py-2.5 px-4 my-4 rounded transition duration-200 hover:bg-gradient-to-r hover:from-cyan-500 hover:to-cyan-500 hover:text-white" href="#">
            仮リンク
          </a>
          <a class="block text-gray-500 py-2.5 px-4 my-4 rounded transition duration-200 hover:bg-gradient-to-r hover:from-cyan-500 hover:to-cyan-500 hover:text-white" href="#">
            仮リンク
          </a>
          <a class="block text-gray-500 py-2.5 px-4 my-4 rounded transition duration-200 hover:bg-gradient-to-r hover:from-cyan-500 hover:to-cyan-500 hover:text-white" href="#">
            仮リンク
          </a>
          <a class="block text-gray-500 py-2.5 px-4 my-4 rounded transition duration-200 hover:bg-gradient-to-r hover:from-cyan-500 hover:to-cyan-500 hover:text-white" href="#">
            仮リンク
          </a>
        </nav>
        <%= button_to "ログアウト", destroy_admin_session_path, form_class: "text-gray-500 py-2.5 px-4 my-2 rounded transition duration-200 hover:bg-gradient-to-r hover:from-cyan-500 hover:to-cyan-500 hover:text-white mt-auto", method: :delete %>
      </div>
      <div class="flex-1 p-4 w-full md:w-1/2 bg-gray-100">
        <div class="bg-white shadow w-full p-2 flex items-center justify-between mb-8">
          <div>
            <h1>
              <%= image_tag "logo.webp",
                alt: "ロゴ画像",
                size: "60x60",
                class: "landscape-photo",
                loading: "lazy"
              %>
            </h1>
          </div>
          <div>
            <button class="md:hidden" id="menuBtn">
              バーガー
            </button>
          </div>
        </div>

        <div class="sm:flex space-x-0 space-y-2 sm:space-x-2 md:space-x-4 sm:space-y-0">
          <div class="sm:flex-1 bg-white p-4 shadow rounded-lg">
            <h2 class="text-gray-500 text-lg font-semibold pb-1">何かに使うかも</h2>
            <div class="bg-gradient-to-r from-cyan-300 to-cyan-500 h-px mb-6"></div>
            <div class="chart-container" style="position: relative; height:150px; width:100%">
            </div>
          </div>
          <div class="sm:flex-1 bg-white p-4 shadow rounded-lg">
            <h2 class="text-gray-500 text-lg font-semibold pb-1">何かに使うかも</h2>
            <div class="bg-gradient-to-r from-cyan-300 to-cyan-500 h-px mb-6"></div>
            <div class="chart-container" style="position: relative; height:150px; width:100%">
            </div>
          </div>
        </div>

        <div class="mt-8 bg-white p-4 shadow rounded-lg">
          <h2 class="text-gray-500 text-lg font-semibold pb-4">アンケート一覧</h2>
          <div class="bg-gradient-to-r from-cyan-300 to-cyan-500 h-px mb-6"></div>
          <% if @surveys.any? %>
            <table class="w-full table-auto text-sm">
              <thead>
                <tr class="text-sm leading-normal text-left">
                  <th class="py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">タイトル</th>
                  <th class="py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">概要</th>
                  <th class="py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">編集</th>
                </tr>
              </thead>
              <tbody>
                <% @surveys.each do |survey| %>
                  <tr class="hover:bg-grey-lighter">
                    <td class="py-2 px-4 border-b border-grey-light"><%= link_to survey.title, admins_survey_path(survey) %></td>
                    <td class="py-2 px-4 border-b border-grey-light"><%= survey.summary %></td>
                    <td class="py-2 px-4 border-b border-grey-light"><%= link_to '編集する', edit_admins_survey_path(survey), class: 'bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded' %> | <%= button_to '削除する', admins_survey_path(survey),method: :delete,form_class: 'inline-block bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded',data: {turbo_method: :delete, turbo_confirm: '本当に削除してもよろしいですか？'} %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% else %>
            <p>アンケートがありません。</p>
          <% end %>

          <div class="text-right mt-4">
            <%= link_to '新規アンケート作成', new_admins_survey_path, class: 'bg-cyan-500 hover:bg-cyan-600 text-white font-semibold py-2 px-4 rounded' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
