<%# ユーザー一覧を表示するテーブル %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>メールアドレス</th>
      <th>登録日</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at.strftime('%Y/%m/%d %H:%M') %></td>
        <td>
          <%= link_to '詳細', admins_user_path(user), class: 'btn btn-info btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
