<div class="mx-auto max-w-screen-xl px-4 py-16 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-md">
    <h2 class="text-center text-2xl font-bold text-indigo-600 sm:text-3xl">Log in</h2>
    <p class="mx-auto mt-4 max-w-md text-center text-gray-500">パスワードを忘れた場合は連絡してください。</p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mb-0 mt-6 space-y-4 rounded-lg p-4 shadow-lg sm:p-6 lg:p-8" }) do |f| %>
      <div class="field">
        <%= f.label :email, class: "mb-1 block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "mb-1 block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center rounded py-2 pr-2 hover:bg-gray-100">
          <%= f.check_box :remember_me, class: "h-4 w-4 mr-2 rounded border-gray-300 text-primary-600 shadow-sm focus:border-primary-300 focus:ring focus:ring-primary-200 focus:ring-opacity-50 focus:ring-offset-0 disabled:cursor-not-allowed disabled:text-gray-400" %>
          <%= f.label :remember_me, class: "flex w-full space-x-2 text-sm" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "block w-full rounded-lg bg-indigo-600 px-5 py-3 text-sm font-medium text-white" %>
      </div>
    <% end %>

    <%= render "admins/shared/links" %>
  </div>
</div>
