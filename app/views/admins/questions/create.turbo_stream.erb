<%= fields model: @survey do |form| %>
  <%= form.fields_for :questions, child_index: params[:index] do |question_form| %>
    <%= turbo_stream.replace "add-question" do %>
      <%= form.submit "Add question", 
        formaction: admins_question_path(question_form.index.to_i + 1), 
        formmethod: :post, 
        formnovalidate: true, 
        id: "add-question" %>
    <% end %>

    <%= turbo_stream.append "questions" do %>
      <%= render "form", form: question_form %>
    <% end %>
  <% end %>
<% end %>